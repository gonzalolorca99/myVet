        android:text="Clientes"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btmascotasvet"
        android:layout_width="140dp"
        android:layout_height="183dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"

        android:layout_marginTop="336dp"
        android:background="@drawable/formaboton"
        android:drawableTop="@drawable/ic_baseline_pets_24grande"
        android:paddingTop="20dp"
        android:text="Mascotas"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btcitas"
        android:layout_width="140dp"
        android:layout_height="183dp"

        android:layout_marginStart="204dp"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/formaboton"
        android:drawableTop="@drawable/ic_baseline_event_24grande"
        android:paddingTop="20dp"
        android:text="Citas"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

